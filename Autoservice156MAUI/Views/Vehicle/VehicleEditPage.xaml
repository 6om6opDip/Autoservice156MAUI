<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autoservice156MAUI.Views.Vehicle.VehicleEditPage"
             Title="Добавить транспорт">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Назад" Clicked="OnCancelClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Форма добавления транспорта"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry x:Name="BrandEntry"
                   Placeholder="Марка *"
                   Margin="0,10,0,0" />

            <Entry x:Name="ModelEntry"
                   Placeholder="Модель *" />

            <Entry x:Name="YearEntry"
                   Placeholder="Год"
                   Keyboard="Numeric" />

            <Entry x:Name="LicensePlateEntry"
                   Placeholder="Номерной знак" />

            <Entry x:Name="VINEntry"
                   Placeholder="VIN номер" />

            <Grid ColumnDefinitions="*,*" 
                  ColumnSpacing="10" 
                  Padding="0,20,0,0"
                  HorizontalOptions="Fill">
                <Button Grid.Column="0"
                        Text="Отмена"
                        Clicked="OnCancelClicked"
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        HeightRequest="45" />

                <Button Grid.Column="1"
                        Text="Сохранить"
                        Clicked="OnSaveClicked"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        HeightRequest="45" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>